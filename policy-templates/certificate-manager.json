{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "acm:RequestCertificate",
                "acm:ListCertificates",
                "acm:ListTagsForCertificate"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "acm:*",
            "Resource": "arn:aws:acm:REGION_HERE:ACCOUNT_NUMBER_HERE:certificate/*"
        }
    ]
}