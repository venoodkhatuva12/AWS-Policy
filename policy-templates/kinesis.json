{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "kinesis:ListStreams",
                "kinesis:EnableEnhancedMonitoring",
                "kinesis:UpdateShardCount",
                "kinesis:DescribeLimits",
                "kinesis:DisableEnhancedMonitoring"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "kinesis:*",
            "Resource": "arn:aws:kinesis:REGION_HERE:ACCOUNT_NUMBER_HERE:stream/COMPONENT_NAME_HERE* "
        }
    ]
}