{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "datapipeline:*",
            "Resource": "*",
            "Condition": {
                "ForAllValues:ArnEqualsIfExists": {
                    "datapipeline:Tag": "component"
                }
            }
        }
    ]
}