{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "lightsail:Get*",
                "lightsail:PeerVpc",
                "lightsail:IsVpcPeered",
                "lightsail:UnpeerVpc"
           
