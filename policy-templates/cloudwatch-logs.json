{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "logs:Describe*",
                "logs:DeleteResourcePolicy",
                "logs:Put*",
                "logs:CancelExportTask",
                "logs:TestMetricFilter",
                "logs:DeleteDestination",
                "logs:CreateLogGroup"
               
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "logs:*",
            "Resource": "arn:aws:logs:REGION_HERE:ACCOUNT_NUMBER_HERE:log-group:COMPONENT_NAME_HERE*"
        }
    ]
}