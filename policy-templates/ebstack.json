{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "elasticbeanstalk:CreatePlatformVersion",
                "elasticbeanstalk:DescribePlatformVersion",
                "elasticbeanstalk:DeletePlatformVersion",
                "elasticbeanstalk:UpdateApplicationResourceLifecycle",
                "elasticbeanstalk:CreateStorageLocation",
                "elasticbeanstalk:CheckDNSAvailability",
                "elasticbeanstalk:ListPlatformVersions"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "elasticbeanstalk:*",
            "Resource": [
                "arn:aws:elasticbeanstalk:REGION_HERE:ACCOUNT_NUMBER_HERE:configurationtemplate/COMPONENT_NAME_HERE*/*",
                "arn:aws:elasticbeanstalk:REGION_HERE:ACCOUNT_NUMBER_HERE:environment/COMPONENT_NAME_HERE*/*",
                "arn:aws:elasticbeanstalk:REGION_HERE::solutionstack/*",
                "arn:aws:elasticbeanstalk:REGION_HERE:ACCOUNT_NUMBER_HERE:applicationversion/COMPONENT_NAME_HERE*/*",
                "arn:aws:elasticbeanstalk:REGION_HERE:ACCOUNT_NUMBER_HERE:application/COMPONENT_NAME_HERE*"
            ]
        }
    ]
}